    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:gravity="center"
        android:background="#ff7622"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/img_admin"
            android:id="@+id/imgv_avatar"/>
        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/tv_user_role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#FFEB3B"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/custom_signin_mainlayout">
        <Button
            android:id="@+id/btn_edit_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_account_address"
            android:text="Edit Address"
            android:gravity="left"
            android:paddingTop="15dp"
            android:paddingBottom="10dp"
            android:textAllCaps="false"
            android:textSize="16sp"

            android:paddingLeft="8dp"
            android:drawableTint="#1b1c1f"
            android:drawablePadding="10dp"
            android:background="@color/white"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#bbb"/>

        <Button
            android:id="@+id/btn_change_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_account_change_password"
            android:text="Change Password"
            android:gravity="left"
            android:paddingTop="15dp"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:paddingBottom="10dp"
            android:paddingLeft="8dp"
            android:drawableTint="#1b1c1f"
            android:drawablePadding="10dp"
            android:background="@color/white"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#bbb"/>

        <Button
            android:id="@+id/btn_management"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_account_management"
            android:text="Management"
            android:gravity="left"
            android:paddingTop="15dp"
            android:paddingBottom="10dp"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:paddingLeft="8dp"
            android:drawableTint="#1b1c1f"
            android:drawablePadding="10dp"
            android:background="@color/white"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#bbb"/>

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_account_signout"
            android:text="Log Out"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:gravity="left"
            android:paddingTop="15dp"
            android:paddingBottom="10dp"
            android:paddingLeft="8dp"
            android:drawableTint="#1b1c1f"
            android:drawablePadding="10dp"
            android:background="@color/white"/>


    </LinearLayout>
