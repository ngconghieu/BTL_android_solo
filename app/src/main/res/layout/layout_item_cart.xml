<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="8dp"
        android:background="#787878"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgv_cart"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:id="@+id/tv_food_name_cart"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="16sp"
                android:textColor="#ff7622"
                android:id="@+id/tv_price_cart"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_sub_cart"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:text="-"
                    android:textStyle="bold"
                    android:background="@drawable/custom_bottomsheet_btn"
                    android:textSize="18sp"
                    android:textColor="#4CAF50"/>

                <Button
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/custom_bottomsheet_btn"
                    android:text="1"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:id="@+id/btn_number_cart"
                    android:textColor="#666565"/>

                <Button
                    android:id="@+id/btn_add_cart"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:text="+"
                    android:textStyle="bold"
                    android:background="@drawable/custom_bottomsheet_btn"
                    android:textSize="18sp"
                    android:textColor="#4CAF50"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_app_btn"
            android:text="Delete"
            android:id="@+id/btn_delete_food"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"/>
    </LinearLayout>

</LinearLayout>